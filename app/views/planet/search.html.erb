<div id="site_list"> 
  <h1>Listing Sites</h1> 
 
  <table> 
  <% @sites.each do |site| %>
    <tr class="<%= cycle('list_line_odd', 'list_line_even') %>"> 
 
      <td> 
        <%= link_to image_tag(site.image_url, :class => 'list_image'), site %>
      </td> 
 
      <td class="list_description"> 
        <dl> 
          <dt><%= link_to site.name, site %></dt> 
          <dd><%= truncate(strip_tags(site.description),
                 :length => 80) %></dd>
          <dd>Nº de viajes que lo incluyen: <%= site.visits.size %></dd>       
        </dl> 
      </td>
 
      <td class="list_actions"> 
        <%= link_to 'Show', site %><br/>
        <% if not(site.comentarios.empty?) %>
        
        <%= link_to 'Comentarios', site_comentarios_path(site) %>

        <% end %>

        <% if site.user == current_user %>
        <%= link_to 'Edit', edit_site_path(site) %><br/>
        <%= link_to 'Destroy', site, 
                    :confirm => 'Are you sure?',
                    :method => :delete %>
        <% end %>
      </td> 
    </tr> 
  <% end %>
  </table> 
</div> 
 
<br /> 

<div id="site_list"> 
  <h1>Viajes</h1> 
 
  <table> 
  <% @trips.each do |trip| %>
    <tr class="<%= cycle('list_line_odd', 'list_line_even') %>"> 
 
      <td class="list_description"> 
        <dl> 
          <dt><%= link_to trip.name, trip_path(trip) %></dt> 
          <dd><%= truncate(strip_tags(trip.description),
                 :length => 80) + ', ' + trip.date.to_s %></dd> 
          <dd>Fecha última actualización : <%= trip.updated_at %></dd> 
        </dl> 
      </td> 
 
      <td class="list_actions"> 
        <%= link_to 'Show', trip %><br/> 
        <% if trip.user == current_user %>
        <%= link_to 'Edit', edit_trip_path(trip) %><br/> 
        <%= link_to 'Destroy', trip, 
                    :confirm => 'Are you sure?',
                    :method => :delete %>
        <% end %>
      </td> 
    </tr> 
  <% end %>
  </table> 
</div> 

