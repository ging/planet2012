<% @site.comentarios.each do |comentario| %>
<td class="list_description"> 
        <dl> 
          
          <dd><%= comentario.user.name if comentario.user %> : <%= strip_tags(comentario.coment)
                  %></dd>
                
        </dl> 
      </td>
<% end %>
<% end %>
