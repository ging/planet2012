<div id="site_list"> 
<h1>Sites</h1> 
 
  <table> 
  <% if @sites %>
   <%@sites.each do |site| %>
    <tr class="<%= cycle('list_line_odd', 'list_line_even') %>"> 
 
      <td> 
        <%= link_to image_tag(site.image.url, :class => 'list_image'), site %>
      </td> 
 
      <td class="list_description"> 
        <dl> 
          <dt><%= link_to site.name, site %></dt> 
          <dd><%= truncate(strip_tags(site.description),
                 :length => 80) %>
          </dd>
           <dd>
            <b>Viajes:</b> <%=site.visits.length%>
          </dd>
          <dd>
              <% if site.comments != [] %>
              <%=link_to "Comments", site_path(site) %> <%= site.comments.length %>
            <% end %>
          </dd>
        </dl> 
      </td>
 
      <td class="list_actions"> 
        <%= link_to 'Show', site %><br/>
        <% if site.user == current_user %>
          <%= link_to 'Edit', edit_site_path(site) %><br/>
          <%= link_to 'Destroy', site, 
                    :confirm => 'Are you sure?',
                    :method => :delete %>
        <% end %>
      </td> 
    </tr> 
  <% end %>
  <% end %>
  </table> 
</div> 